<div class="container" style="margin-top:60px">

	<h1 style="margin-top:60px">顧客關係管理: RFM</h1>
	<table class="table table-hover">
		<thead>
			<th scope="col">顧客姓名</th>
			<th scope="col">最近購買時間</th>
			<th scope="col">購買頻率</th>
			<th scope="col">購買金額</th>
			<th scope="col">R組別</th>
			<th scope="col">F組別</th>
			<th scope="col">M組別</th>
		</thead>
		<tbody>
			{{#each customers}}
			<tr class="customers">
				<td id="{{id}}">{{name}}</td>
				<td>{{r}}</td>
				<td>{{f}}</td>
				<td>{{m}}</td>
				<td>{{RTeam}}</td>
				<td>{{FTeam}}</td>
				<td>{{MTeam}}</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
	<h1 style="margin-top:60px">損益分析</h1>

	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">RFM代碼</th>
				<th scope="col">優惠碼成本</th>
				<th scope="col">每銷售淨利</th>
				<th scope="col">損益平衡值</th>
				<th scope="col">實際回應率</th>
				<th scope="col">損益平衡指數</th>
			</tr>
		</thead>
		<tbody id="analyze">
			{{#each breakeven}}
			<tr>
				<th scope="row">{{rfm_code}}</th>
				<td>15</td>
				<td>40</td>
				<td>0.375</td>
				<td>{{response_rate}}</td>
				<td>{{breakeven_index}}</td>
			</tr>
			{{/each}}
		</tbody>
	</table>

	<canvas id="canvas"></canvas>
</div>
<!-- /container -->

<div style="display: none" id="response">
	{{#each teamInfo}}
	<p class="team">{{team}}</p>
	<p class="response">{{response}}</p>
	{{/each}}
</div>

{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
<script>
	var color = Chart.helpers.color;

	var team = $('.team');
	var response = $('.response');

	const data = [];

	console.log("123");
	for (let i = 1; i <= 3; i++) {
		for (let j = 1; j <= 3; j++) {
			for (let k = 1; k <= 3; k++) {
				let rfm = 100 * i + 10 * j + k;
				console.log(rfm);
				for (let h = 0; h < team.length; h++) {
					if (team[h].innerHTML == rfm) {
						$('#analyze').append(`<tr>
							<td scope = "row" >${rfm}</td >
								<td>15</td>
								<td>40</td>
								<td>0.375</td>
								<td>${response[h].innerHTML}</td>
								<td>` + (response[h].innerHTML - 0.375) / 0.375 + `</td>
							</tr >`);
						data.push((response[h].innerHTML - 0.375) / 0.375);
						break;
					}
					else {
						if (h == team.length - 1) {
							$('#analyze').append(`<tr>
							<td scope = "row" >${rfm}</td>
								<td>15</td>
								<td>40</td>
								<td>0.375</td>
								<td>0</td>
								<td>-1</td>
							</tr >`);
							data.push(-1);
						}
						else
							continue;
					}
				}
			}
		}
	}

	const colours = data.map((value) => value < 0 ? color('rgb(255, 99, 132)').alpha(0.5).rgbString() : color('rgb(54, 162, 235)').alpha(0.5).rgbString());
	var horizontalBarChartData = {
		labels: ["111", "112", "113", "121", "122", "123", "131", "132", "133",
			"211", "212", "213", "221", "222", "223", "231", "232", "233",
			"311", "312", "313", "321", "322", "323", "331", "332", "333"],
		datasets: [{
			label: '損益平衡指數',
			backgroundColor: colours,
			borderColor: colours,
			borderWidth: 1,
			data: data,
		}]
	};

	window.onload = function () {
		var ctx = document.getElementById("canvas").getContext("2d");
		window.myHorizontalBar = new Chart(ctx, {
			type: 'horizontalBar',
			data: horizontalBarChartData,
			options: {
				// Elements options apply to all of the options unless overridden in a dataset
				// In this case, we are setting the border of each horizontal bar to be 2px wide
				elements: {
					rectangle: {
						borderWidth: 2,
					}
				},
				responsive: true,
				legend: {
					position: 'right',
				},
				title: {
					display: true,
					text: '損益分析'
				}
			}
		});

	};
</script> {{/section}}