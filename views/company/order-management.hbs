<div class="container" style="margin-top:60px">

    <h1>訂單查詢</h1>

    <div class="row">
        <div class="col-5">
            <input type="text" class="form-control" placeholder="Order ID" aria-label="Order ID">
        </div>
        <div class="col-5">
            <input type="text" class="form-control" placeholder="Customer Name" aria-label="Customer Name">
        </div>
        <div class="col-2">
            <a href="#" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Search</a>
        </div>
    </div>

    <h1 style="margin-top:60px">訂單進度
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            編輯
        </button>
    </h1>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">訂單進度修改</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="text" class="form-control" placeholder="Order ID" aria-label="Order ID">
                    <label class="checkbox-inline">
                        <input type="checkbox" value="shipped">已出貨</label>
                    <label class="checkbox-inline">
                        <input type="checkbox" value="done">已完成</label>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">顧客姓名</th>
                <th scope="col">購買品項</th>
                <th scope="col">購買金額</th>
                <th scope="col">預計出貨日</th>
                <th scope="col">狀態</th>
            </tr>
        </thead>
        <tbody>
            {{#each order}}
            <tr>
                <td>{{customer_name}}</td>
                <td>{{product_name}}</td>
                <td>{{total}}</td>
                <td>{{estimated_ship_date}}</td>
                <td>{{order_status}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <h1 style="margin-top:60px">歷史紀錄</h1>

    <table class="table table-hover">
        <thead>

            <tr>
                <th scope="col">顧客姓名</th>
                <th scope="col">購買品項</th>
                <th scope="col">購買金額</th>
                <th scope="col">出貨日</th>
                <th scope="col">到貨日</th>

            </tr>
        </thead>
        <tbody>
            {{#each history_order}}
            <tr>
                <td>{{customer_name}}</td>
                <td>{{product_name}}</td>
                <td>{{total}}</td>
                <td>{{shipped_date}}</td>
                <td>{{arrived_date}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>